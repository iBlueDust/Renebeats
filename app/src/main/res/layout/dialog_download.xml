                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:text="Conversion"
                    android:textAppearance="@style/Text.BoldAccent" />

                <TextView
                    android:id="@+id/path_conversion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/Text.SemiLight" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/status_conversion"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@color/SecondaryDark" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:text="Final (MTDT)"
                    android:textAppearance="@style/Text.BoldAccent" />

                <TextView
                    android:id="@+id/path_metadata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/Text.SemiLight" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/status_metadata"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@color/SecondaryDark" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/save"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:text="Close"
            android:textColor="@color/Accent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/secret_second" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>