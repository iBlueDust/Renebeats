        <mabbas007.tagsedittext.TagsEditText
            android:id="@+id/genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:allowSpaceInTag="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
            app:tagsBackground="@drawable/square"
            app:tagsCloseImageLeft="@drawable/dot"
            app:tagsCloseImagePadding="@dimen/defaultTagsCloseImagePadding"
            app:tagsCloseImageRight="@drawable/tag_close"
            app:tagsTextColor="#39393F"
            app:tagsTextSize="@dimen/defaultTagsTextSize" />

        <CheckBox
            android:id="@+id/exception"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/semibold"
            android:text="Normalize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genres" />

        <ImageButton
            android:id="@+id/normalize_help"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/exception"
            app:layout_constraintStart_toEndOf="@+id/exception"
            app:layout_constraintTop_toTopOf="@+id/exception"
            app:srcCompat="@drawable/ic_help_secondarydark_24dp"
            tools:ignore="VectorDrawableCompat"
            android:contentDescription="\?" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/medium"
            android:text="Start"
            android:textColor="@color/textDarkGray"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="@+id/download"
            app:layout_constraintStart_toStartOf="@+id/download"
            app:layout_constraintTop_toBottomOf="@+id/exception" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/medium"
            android:text="End"
            android:textColor="@color/textDarkGray"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/conversion"
            app:layout_constraintStart_toStartOf="@+id/conversion"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <Button
            android:id="@+id/download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/conversion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/conversion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/download"
            app:layout_constraintTop_toTopOf="@+id/download" />

    </androidx.constraintlayout.widget.ConstraintLayout>
